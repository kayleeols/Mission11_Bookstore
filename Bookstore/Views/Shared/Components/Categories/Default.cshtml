@{
}

@model IEnumerable<string>
<div class="">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum = "1" class="btn btn-outline-secondary btn-block">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum = "1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-secondary btn-block" : "btn-outline-secondary btn-block")">@c</a>
        
    }
</div>